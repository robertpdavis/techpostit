<!-- Loop over each blog post in the blogs array -->
{{#each blogs as |blog| }}
<div class="row justify-content-between">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3>
          {{blog.title}}
        </h3>
        <span>Posted By {{blog.user.username}} {{format_date blog.date_created}}</span>
      </div>
      <div class="card-body">
        <p class="card-text">
          {{blog.content}}
        </p>
      </div>
    </div>
  </div>
</div>
{{/each}}