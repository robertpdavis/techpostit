<div class="row justify-content-between">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3>
          {{post.title}}
        </h3>
        <span class="post-header-span">Posted By {{post.user.username}} {{format_date post.date_created}}</span>
      </div>
      <div class=" card-body">
        <p class="card-text">
          {{post.content}}
        </p>
      </div>
    </div>
    {{!-- New comment section --}}
    <div class="row justify-content-between">
      <div class="col-12">
        <div class="card">
          <div class="card-header comment-header">
          </div>
          <div class=" card-body">
            <form class="form comment-form" data-postid="{{post.id}}">

              <label class="comment-label" for="comment">Comment</label>
              <input class="comment-input" type="text" id="comment" />


              <button class="btn btn-primary" type="submit">Submit</button>

            </form>
          </div>
        </div>
      </div>
    </div>
    {{#if comments.length}}
    <h4>Comments</h4>
    {{#each comments as |comment| }}
    <div class="row justify-content-between">
      <div class="col-12">
        <div class="card">
          <div class="card-header comment-header">
          </div>
          <div class=" card-body">
            <p class="card-text">
              {{comment.content}}
            </p>
            <span class="post-comment-span">Posted By {{comment.user.username}} {{format_date
              comment.date_created}}</span>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <h4>No comments yet for this post.</h4>
    {{/if}}

  </div>
</div>

<script src="/js/comment.js"></script>