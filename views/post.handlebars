{{!-- View post --}}
{{#if option.view}}
<div class="row justify-content-between">
  <div class="col-12">
    <form class="form post-form" data-postid="{{post.id}}">
      <button class="btn btn-primary" type="button" id="update">Update</button>
      <button class="btn btn-primary" type="button" id="delete">Delete</button>
      <div class="card">
        <div class="card-header">
          <h3>
            <input class="post-title-input" type="text" id="title" value="{{post.title}}" />
          </h3>
          <span class="post-header-span">Posted {{format_date post.date_created}}</span>
        </div>
        <div class=" card-body">
          <p class="card-text">
            <input class="post-content-input" type="text" id="content" value="{{post.content}}" />
          </p>
        </div>
      </div>
    </form>


    {{!-- List all comments for this post --}}
    {{#if comments.length}}
    <h4>Comments</h4>
    {{#each comments as |comment| }}
    <div class="row justify-content-between">
      <div class="col-12">
        <div class="card">
          <div class="card-header comment-header">
          </div>
          <div class=" card-body">
            <p class="card-text">
              {{comment.content}}
            </p>
            <span class="post-comment-span">Posted By {{comment.user.username}} {{format_date
              comment.date_created}}</span>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <h4>No comments yet for this post.</h4>
    {{/if}}

  </div>
</div>
{{/if}}
{{!-- Create a new post --}}
{{#if option.create}}
<div class="row justify-content-between">
  <div class="col-12">
    <form class="form post-form">
      <div class="card">
        <div class="card-header">
          <h3>
            Create New Post
          </h3>
        </div>
        <div class=" card-body">
          <label class="post-title-label" for="title">Title</label>
          <h3><input class="post-title-input" type="text" id="title" /></h3>
          <label class="post-content-label" for="content">Content</label>
          <input class="post-content-input" type="text" id="content" />

          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
{{/if}}

<script src="/js/post.js"></script>